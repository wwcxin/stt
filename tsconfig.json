{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@picovoice/*": ["./types/@picovoice/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/**/*.d.ts",
    "plugins/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 